---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="keywords"
      content="diseño innovador, creatividad visual, funcionalidad excepcional, experiencia de usuario, estética vanguardista, proyectos impactantes, originalidad en el diseño, soluciones visuales, portafolio de diseño, inspiración creativa"
    />
    <meta name="description" content={description} />
    <meta property="og:image" content="/img/portada.webp" />
    <title>
      Diseño Innovador: Explorando Creatividad y Funcionalidad en Cada Proyecto
    </title>

    <link rel="stylesheet" href="/css/normalize.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="background"></div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    font-size: 62.5%;
    box-sizing: border-box;
    font-family: "Onest Variable", System-ui, sans-serif;
    scroll-behavior: smooth;
    color: #fff;
  }

  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  body {
    position: relative;
    font-size: 1.6rem;
    line-height: 1.5;
  }

  .background {
    position: absolute;
    top: 0;
    bottom: 0;
    z-index: -2;
    min-height: 100vh;
    width: 100%;
    background-color: rgb(10 10 10);
    background-image: radial-gradient(
      ellipse 80% 80% at 50% -20%,
      rgba(120, 119, 198, 0.3),
      rgba(255, 255, 255, 0)
    );
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }
</style>
