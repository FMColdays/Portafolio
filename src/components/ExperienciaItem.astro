---
const { fecha, titulo, descripcion, link } = Astro.props;
---

<li class="contenedor-experiencia">
  <time datetime={fecha}>{fecha}</time>
  <h1 class="titulo-experiencia">
    {titulo}
  </h1>
  <p class="descripcion-experiencia">{descripcion}</p>
  <div class="circulo"></div>

  {
    link && (
      <a class="link" target="_blank" rel="noopener noreferrer" href={link}>
        Saber m√°s &rarr;
      </a>
    )
  }
</li>

<style>
  .circulo {
    position: absolute;
    top: 6px;
    left: -6px;
    width: 1.5rem;
    height: 1.5rem;
    background-color: #fff;
    border-radius: 50%;
  }

  .contenedor-experiencia {
    position: relative;
    padding-left: 2rem;
    padding-bottom: 3rem;
    margin-block: 1rem;
  }

  .contenedor-experiencia:last-child {
    padding-bottom: 0;
  }

  .contenedor-experiencia::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0.1rem;
    height: 110%;
    background-color: rgb(255 255 255 /0.6);
  }

  time {
    display: block;
    color: rgba(238, 246, 104, 0.7);
    font-size: 1.4rem;
    padding-top: 0.5rem;
  }

  .titulo-experiencia {
    font-size: 2.6rem;
    margin: 0;
    color: rgb(83 189 235 / 0.9);
  }

  .descripcion-experiencia {
    font-size: 1.6rem;
    color: #fff;
    margin: 0;
  }

  .contenedor-experiencia:has(a) .descripcion-experiencia {
    margin-bottom: 2rem;
  }

  .link {
    text-decoration: none;
    font-size: 1.4rem;
    background-color: rgb(0 0 0 / 0.1);
    border: 1px solid rgb(255 255 255 / 0.3);
    padding: 1rem 3rem;
    border-radius: 10rem;
    color: #fff;
    transition: background-color 0.2s ease-in-out;
  }

  .link:hover {
    background-color: rgba(110 107 107/ 0.1);
  }
</style>
